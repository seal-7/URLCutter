<div align="center">
  <div class="alert alert-secondary" role="alert">
    Leave short url empty for generating a random short url.
  </div>
<form class="form-inline" method="post" action="/create">
    <div class="form-group">
        <input type="url" class="form-control" id="url" name="url" placeholder="URL">
    </div>
    <div class="form-group">
        <label>http://theurlcutter.in/</label>
        <input type="text" onkeyup="nospaces(this)" class="form-control" id="short_url" name="short_url" placeholder="Short url" >
    </div>
    </br>
    </br>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>
<script type="text/javascript">

    function nospaces(t){

        if(/[^a-zA-Z0-9]+/i.test(t.value)){

            alert('Sorry, only Aplha numeric characters are allowed');

            t.value=t.value.replace(/[^a-zA-Z0-9]/g,'');

        }

    }

</script>
